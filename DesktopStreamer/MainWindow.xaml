<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DesktopStreamer" x:Class="DesktopStreamer.MainWindow"
        Title="MainWindow" MinWidth="350" MinHeight="200" Height="300" Width="500" SizeChanged="MainWindow_SizeChanged">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MinHeight="40"/>
            <RowDefinition Height="5*" Name="ExpandArea"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnExpand" Content="Collapse" Grid.Column="0" Click="btnExpand_Click" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Margin="6"/>
        <local:FavoriteList x:Name="favList" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="3" onAddClick="favList_AddClick"/>
        <local:MainElement x:Name="mainEle" Grid.Column="1" Grid.ColumnSpan="2" Margin="3"/>
    </Grid>
</Window>
